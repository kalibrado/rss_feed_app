# filepath: .env
# Logging
LOG_LEVEL=DEBUG
APP_ENV=development

# API
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://rss_user:rss_password@localhost:5432/rss_feed_db
SQL_ECHO=false

# Security & Authentication
SECRET_KEY=change-this-secret-key-in-production-use-secrets-token-urlsafe-32
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Performance
MAX_WORKERS=20
REQUEST_TIMEOUT=30
JINA_TIMEOUT=30

# Limites
MAX_FEED_ENTRIES=1000
MIN_CONTENT_LENGTH=50
MAX_TAGS_PER_ARTICLE=10

# URLs
JINA_BASE_URL=https://r.jina.ai

# Features
USE_JINA=true
USE_CLOUDSCRAPER=true
USE_PLAYWRIGHT=true

# Playwright settings
PLAYWRIGHT_BLOCK_IMAGES=true
PLAYWRIGHT_BLOCK_ADS=true
PLAYWRIGHT_BLOCK_TRACKERS=true
PLAYWRIGHT_TIMEOUT=30
PLAYWRIGHT_BLOCK_MEDIA=true
PLAYWRIGHT_BLOCK_FONTS=true